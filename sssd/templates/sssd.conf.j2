# {{ ansible_managed }}
[sssd]
domains = {{ sssd_ad_domain }}
config_file_version = 2
services = nss, pam, ssh

[domain/{{ sssd_ad_domain }}]
access_provider = ad
ad_domain = {{ sssd_ad_domain }}
cache_credentials = True
default_shell = {{ sssd_ad_default_shell }}
dyndns_update = {{ sssd_dyndns_update }}
fallback_homedir = {{ sssd_ad_fallback_homedir }}
id_provider = ad
krb5_realm = {{ sssd_ad_realm }}
krb5_store_password_if_offline = True
ldap_id_mapping = True
use_fully_qualified_names = {{ sssd_ad_use_fully_qualified_names }}
ldap_user_extra_attrs = {{ sssd_ldap_ssh_key_attribute }}
ldap_user_ssh_public_key = {{ sssd_ldap_ssh_key_attribute }}
{% if sssd_ad_gpo_map_remote_interactive is defined %}
ad_gpo_map_remote_interactive = {{ sssd_ad_gpo_map_remote_interactive }}
{% endif %}
